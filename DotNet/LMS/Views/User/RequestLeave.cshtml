@model RequestLeaveModel

@{
    ViewBag.Title = "Request Leave";
    Layout = "_EmpLayout";
}

<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<h2>Request Leave</h2>
<br>
<style>
     
      
        label
        {
            width: 15%;
        }
    
        button
        {   
            width: 80px;
            height: 35px;
            background-color: rgb(31, 30, 30);
            border-radius: 1em;
            align-items: left;
            flex-direction: row;
            justify-content: left;
            margin-left: 35%;
            margin-top: 1.5%;
            color: white;          
        }
        button:hover 
        {
            background-color:rgb(82, 21, 139);
            cursor: pointer;
        }

        .content 
        {
        max-width: 500px;  
        background: #cce9f3;
        padding: 10px;
        margin-top: 1em;  
        box-shadow:  0 0 5px 5px #2b2b2b;
        border-radius: 1em;
       
        }
        .b1
        {
            display: block;
            margin-left: 9em;
            background-color: white;
            height: 2em;
            width: 6em;
            border-radius: 1em;
            margin-left: 20%;
            margin-top: 10%;
            background: rgb(34, 33, 33);
            color: rgb(247, 247, 247);
            cursor: pointer;
            margin-left: 0%;
            margin-top: 1%;
        }
        .b1:hover
        {
            background: rgb(68, 149, 204);
            color: black;
        } 
</style>
</head>

<body style="background-color: #efb3b3;">
<div class="content" >
<form  style="margin: auto; width: 150px" method="post">
    
     <label asp-for="EmpId"> Employee ID:</label>
    <input asp-for="EmpId" type="number" readonly>

     <label asp-for="fromDate"> From Date:</label>
    <input asp-for="fromDate" type="date" id="fromDate" name="fromDate" required>

    <label asp-for="toDate">To Date:</label>
    <input asp-for="toDate" type="date" id="toDate" name="toDate" required>

    <label asp-for="leaveType">Leave Type:</label>
    <select id="leaveType" name="leaveType" required>
      <option value="sick">Sick Leave</option>
      <option value="personal">Personal Leave</option>
    </select>

    <label asp-for="numberOfDays">Number of Days:</label>
    <input asp-for="numberOfDays" type="number" id="numberOfDays" name="numberOfDays" required>

    <label asp-for="Description">Description:</label>
    <textarea asp-for="Description" id="description" name="description" rows="4" required></textarea>

    <button type="submit">Apply</button>
    <br>
    <p style="background-color: #ff1e00;">@ViewBag.message</p>
</form>
</div>
</body>
<br>
<form method="get" asp-controller="User" asp-action="Index">
<button class="b1" type="submit">Go Back</button>
</form>
</html>