th,td{
        padding: 10px;
        text-align: center;
    }
    button{
        border:none ;
        background-color: rgb(62, 194, 132);
        border-radius: 7%;
    }
    label{
        margin-left: 400px;
        width: 400px;
        font-weight: bold;
        font-size: xx-large
    }
    table{
        margin-left: 150px;
        margin-top: 10%;

    }
</style>
</head>
<body>

<div id="main" style="left: 10%;">
  <label>Leave Details</label>
<br>
<table border=3 style="margin-left: -1%;">
    <thead>
        <tr>
          
          <th>Emplouee ID</th>
          <th>From Date</th>
          <th>To Date</th>
          <th>Leave Type</th>
          <th>Number of Days</th>
          <th>Description</th>
          <th>Status</th>

        </tr>
    </thead>
    <tbody>
        @foreach(RequestLeaveModel user in Model){
            <tr>              
                <td>@user.EmpId</td>
                <td>@user.fromDate</td>
                <td>@user.toDate</td>
                <td>@user.leaveType</td>
                <td>@user.numberOfDays</td>
                <td>@user.Description</td>
                <td>@user.Status</td>
                <form method="post" asp-action="ManageLeaves" asp-route-id="@user.Requestid" asp-route-status="Declined"  asp-controller="Admin" > 
                  <p style="margin-left: 150px;color:red;">@ViewBag.Message</p>
                <td><button type="submit">Decline</button></td>
                </form> 
                <form method="post" asp-action="ManageLeaves" asp-route-id="@user.Requestid" asp-route-status="Approved" asp-controller="Admin" >
                <td><button type="submit">Approve</button></td>
                </form>
            </tr>
        }
    </tbody>
</table>
  
</div>
   
</body>
</html> 
